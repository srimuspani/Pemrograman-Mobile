<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/purple"
    tools:context=".view.main.InfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:navigationIcon="@drawable/ic_back">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Tentang Kami"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/loc_edittext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edittext1"/>

    <EditText
        android:id="@+id/location_edittext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edittext_loc1"/>

    <Button
        android:id="@+id/open_location_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/button_loc1"
        android:onClick="openLocation"/>


    <EditText
        android:id="@+id/loc_edittext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edittext2"/>

    <EditText
        android:id="@+id/location_edittext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edittext_loc2"/>

    <Button
        android:id="@+id/open_location_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/button_loc2"
        android:onClick="openLocation"/>

    <EditText
        android:id="@+id/loc_edittext3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edittext3"/>

    <EditText
        android:id="@+id/location_edittext3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edittext_loc3"/>

    <Button
        android:id="@+id/open_location_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/button_loc3"
        android:onClick="openLocation"/>

</LinearLayout>
